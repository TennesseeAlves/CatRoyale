 puml 
@startuml
'https://plantuml.com/class-diagram

package CS {
    class int{}
    class string{}
    class boolean{}
}

package MonoGame {
    class KeyboardState{}
}

package OurGame{
    
    class Jeu{
        plateau : Plateau
        joueur1 : Joueur
        joueur2 : Joueur
        Jeu()
        Initialize()
        LoadContent()
        Update()
        Draw()
        Transition(int etatActuelAutomate, KeyboardState etatActueClavier) : bool
    }
    
    class Plateau { 
        map :  Invocation[,]
        getEntityAt(int ligne, int colonne) : Invocation?
        deleteAt(int ligne, int colonne) : bool
        invoke(Carte carte, int ligne, int colonne) : bool
        move(int ligneDepart, int colonneDepart, int ligneArrive, int colonneArrive) : bool
        attack(int ligneDepart, int colonneDepart, int ligneArrive, int colonneArrive) : bool
    }
    
    class Joueur {
        pseudo : string
        winStreak : int
        jauge : int
        main : ListeDeCartes
        deck : ListeDeCartes
    }
    
    class ListeDeCartes {
        cartes : Carte[]
    }
    
    class Carte {
        vie : int
        degat : int
        nom : string
        image : string 
        cout : int
        type : TypeDeCarte
        invocation : Invocation
        rarete : TypeRarete
        
    }
    
    class TypeDeCarte <<enum>> {
        combattant
        sort
        objet
    }
    
    class TypeRarete <<enum>> {
        commune
        rare
        épique
        légendaire
    }
    
    class Invocation {
        vie : int
        degat : int
        sprite : string
        Invocateur : Joueur
        peutBouger : boolean
        peutAttaquer : boolean
    }
    
    Jeu *-- Plateau
    Jeu "1"*--"2" Joueur
    Plateau "1"*--"*" Invocation
    Joueur "1"*--"2" ListeDeCartes
    ListeDeCartes "1"*--"*" Carte
    Carte *-- TypeDeCarte
    Carte *-- Invocation
    Carte *-- TypeRarete
    Invocation *-- Joueur
}
@enduml