@startuml
'skinparam linetype ortho

package XMLSchema #DDD {
    class string
    class int
    class boolean
}

package OurGame{
    
    class Jeu{
        plateau : Plateau
        joueur1 : Joueur
        joueur2 : Joueur
        carteDuJeu : ListeDeCartes
    }
    
    class Plateau { 
        colonne : TabInvocation[]
    }
    
    class TabInvocation {
        ligne :  Invocation[]
    }
    
    
    class Joueur {
        pseudo : string
        winStreak : int
        jauge : int
        main : ListeIdCarte
        deck : ListeIdCarte
    }
    
    class ListeDeCartes {
        carte : Carte[]
    }
    
    class Carte {
        {attribut} id : IdCarte
        vie : int
        degat : int
        nom : string
        imageCarte : string 
        imageInvocation : string 
        cout : int
        type : TypeDeCarte
        rarete : TypeRarete
    }
    
    class IdCarte <<enum>> {
        sorcier 
        ...
        ...
    }
    note bottom of IdCarte : à redefinr avec les vrais nom de chaque carte
    
    class ListeIdCarte  {
        listeId : IdCarte[] 
    }
    
    
    class TypeDeCarte <<enum>> {
        combattant
        sort
        objet
    }
    
    class TypeRarete <<enum>> {
        commune
        rare
        épique
        légendaire
    }
    
    class Invocation {
        vie : int
        degat : int
        pseudoInvocateur : string
        peutJouer : boolean
        peutAttaquer : boolean
    }
    
    Jeu *--"1" Plateau
    Jeu "1"*--"2" Joueur : < Peu jouer un seul jeux à la fois
    Jeu *--"1" ListeDeCartes
    
    TabInvocation *--"*" Invocation
    Joueur *--"2" ListeIdCarte
    
    ListeDeCartes *--"*" Carte
    
    Carte *--"1" TypeDeCarte
    Carte *--"1" TypeRarete
    Carte *--"1" IdCarte
    
    ListeIdCarte *-- "*" IdCarte
    
    Plateau *--"*" TabInvocation 
    
   IdCarte --|> string 
   TypeDeCarte --|> string 
   TypeRarete --|> string 
}
@enduml